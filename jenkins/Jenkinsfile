pipeline {
    agent {
        docker {
            image 'maven:3.8.1-adoptopenjdk-11'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Unit Test') { 
            steps {
                sh 'mvn clean test'
            }
        }
        stage('Static Analysis') {
            steps {
                sh 'echo Hola mundo'
            }
        }
        stage('Build') {
            steps {
                sh 'echo Build'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo Deploy'
            }
        }
    }
}